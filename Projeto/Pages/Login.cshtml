@page
@model Projeto.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

    <h4>🔓 Login</h4>
    <hr />
<p>(usuário: admin - senha: admin)</p>
<p class="text-danger">@Model.Message</p>

<form method="post">
    <div class="form-group">
        <label asp-for="UserName" class="col-form-label col-md-2">Usuário</label>
        <div class="col-md-5">
            <input asp-for="UserName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-form-label col-md-2">Senha</label>
        <div class="col-md-5">
            <input asp-for="Password" type="password" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-primary btn-sm">Log in</button>
    </div>
</form>
