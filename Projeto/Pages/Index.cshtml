@page
@model IndexModel
@{
    ViewData["Title"] = "Entrevista";
}

<div class="text-center">
    <h1 class="display-4">Bem vindo 🙋‍♂️</h1>
    <p class="lead">Caro amigo, este projeto foi desenvolvido com o intuito de testar suas habilidades com programação. Não se preocupe com os detalhes, queremos apenas verificar o seu nível de entendimento das prevalentes funções do dia-a-dia. Boa sorte!!</p>
</div>

<!-- TODO: coloque seu nome aqui -->


<div class="row">
    <div class="col-md-12">
        <h1>LISTA DE TAREFAS</h1>
    </div>
</div>

<form asp-page-handler="post" name="formTarefa">
    @Html.AntiForgeryToken()

    @for(var i = 0; i < Model.Tarefas.Count(); i++)
    {
        <div class="row">
        <div class="col-md-12">
             @Html.HiddenFor(m => Model.Tarefas[i].Id)
             @Html.HiddenFor(m => Model.Tarefas[i].Tipo)
             @Html.HiddenFor(m => Model.Tarefas[i].Descricao)

             @Html.CheckBoxFor(m => Model.Tarefas[i].Concluida, new { onclick="document.formTarefa.submit()" })
             <b>[@Html.DisplayFor(m => Model.Tarefas[i].Tipo)]</b>
             @Html.DisplayFor(m => Model.Tarefas[i].Descricao)
        </div>
    </div>
    }

</form>

